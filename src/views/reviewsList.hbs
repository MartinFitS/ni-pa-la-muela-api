<table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre del platillo</th>
            <th>Descripcion del platillo</th>
            <th>Restaurante</th>
            <th>Foto del platillo</th>
            <th>Precio</th>
            <th>Calificacion</th>
            <th>Opciones</th>
        </tr>
    </thead>

    <tbody>
        {{#each reviews}}
            <tr>
                <td>{{@index}}</td>
                <td>{{titleSaucer}}</td>
                <td>{{descriptionSaucer}}</td>
                <td>{{restaurant}}</td>
                <td><img src={{photoOfSaucer}} alt=""></td>
                <td>{{priceOfSaucer}}</td>
                <td>{{calificationSaucer}}</td>
                <td>
                    <a href="/edit/{{_id}}">Editar</a>
                    <a href="/delete/{{_id}}">Eliminar</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
